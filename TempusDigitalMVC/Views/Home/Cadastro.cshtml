@model CadastroCliente

@{
    Layout = "_Layout";
    var title = "Adicionar cliente";
    ViewData["Title"] = title;
}

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<h2>@title</h2>

<form class="m-1 p-1" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" maxlength="150" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CPF"></label>
        <input asp-for="CPF" type="text" class="form-control" maxlength="11" pattern="[0-9]{11}" title="Preencha apenas os dígitos." />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" type="date" max="@DateTime.Today" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RendaFamiliar"></label>
        <input asp-for="RendaFamiliar" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="RendaFamiliar" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>